<div class="form-group row">
  <div class="address-form">
    <% if @address.errors.any? %>
      <div class="error-addresses">
        <h5 style="margin-top: -82px;">
          <%= pluralize(@address.errors.count, "error") %> prohibited
          this address from being saved:
        </h5>
        <ul>
          <% @address.errors.full_messages.each do |msg| %>
            <li><%= msg %> </li>
          <% end %>
        </ul>
       </div>
     <% end %>
    <h5 class="address-header">Delivery Address</h5>
    <%= form_for @address, url: addresses_path(@address) do |f| %>
      <div class="form-group row">
        <%= f.label :building_no, "Building No ", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :building_no, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :area, "Area/Street ", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :area, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :city, "City ", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :city, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :state, "State ", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :state, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :pincode, "Pincode ", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10" >
          <%= f.text_field :pincode, class: "form-control" %>
        </div>
      </div>
       <div style="margin-left: 190px">
        <%= f.submit 'Submit', class: "btn btn-info"%>
      </div>
      <div style="margin-left: 285px; margin-top: -38px;">
        <%= link_to 'Cancel', addresses_path, class: "btn btn-info" %> 
      </div>
    <% end %>
  </div>
</div>
