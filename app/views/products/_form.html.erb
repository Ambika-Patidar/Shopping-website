<div style="margin-top: -828px; float: right; margin-right: 66px;">
  <%= link_to 'Back', products_path, class: "btn btn-info" %>
</div>
<%= form_for @product  do |f| %>
  <div class="container text-center">
    <% if @product.errors.any? %>
      <div class="error_messages">
        <h5>
          <%= pluralize(@product.errors.count, "error") %> prohibited
          this product from being saved:
        </h5>
        <ul>
          <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group row">
      <%= f.label :name, "Product", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :brand, "Brand ", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= f.text_field :brand, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :price, "Price ", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= f.number_field :price, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :category, "Category ", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= f.select :category_id, options_for_select(product_category), options = { include_blank: "Please select" }, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :image, "Image ", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= f.file_field :image, class: "form-control" %>
      </div>
    </div>
    <div class="submit-button">
      <%= f.submit 'Submit', class: "btn btn-info" %>
    </div>
    <div class="cancel-button">
      <%= link_to 'Cancel', products_path, class: "btn btn-info" %> 
    </div>
  </div>
<% end %>
