<div class="new-product-button">
  <p><%= link_to 'New', new_product_path, :class =>"btn btn-info" %></p>
</div>
<div class="product-list">
  <table class="table table-striped" >
    <thead class="thead-dark">
      <tr> 
        <th>Product</th>
        <th>Brand</th>
        <th>Price</th>
        <th>Category</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.brand %></td>
        <td><%= product.price %></td>
        <td><%= product.category.category_name %></td>
        <td><%= image_tag(product.image) if product.image.attachment %></td>
        <td><%= link_to 'Edit',edit_product_path(product) %></td>
        <td><%= link_to 'Destroy',product_path(product),method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        </td>
      </tr>
    <% end %>
  </table>
</div>
