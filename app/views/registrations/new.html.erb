<%= form_for @user, url: registrations_create_path(@user)  do |f| %>
  <div class="container text-center">
    <% if @user.errors.any? %>
      <div id ="error_explanation" class="error_messages">
        <h5>
          <%= pluralize(@user.errors.count, "error") %> prohibited
          this user from being saved:
        </h5>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <h2>Sign Up</h2>
    <div class="form-group row">
      <%= f.label :first_name, "First Name ", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :last_name, "Last Name ", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, "Email", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password, "Password ", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
    <div class="submit-sign-button">
      <p><%= f.submit 'Submit'  %></p>
      <p>Already new user? <%= link_to  'Sign in', sessions_new_path %></p>
    </div>
  </div>
<% end %>
  