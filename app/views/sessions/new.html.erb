<%= form_with scope: :user, url: sessions_create_path, local: true do |f| %>
  <div class="sign-form">
    <div class="container text-center">
      <h2>Sign In</h2>
      <div class="form-group row">
        <%= f.label :email, "Email ", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, "Password", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="submit-sign-button">
        <p><%= f.submit 'Submit'  %></p>
        <p> New user? <%= link_to 'Sign Up', registrations_new_path %></p>
      </div>
    </div>
  </div>
<% end %>