<% @products.each do |product| %>
  <div class="col-sm-3">
    <div class="card">
      <%= link_to image_tag(product.image, class: "card-img-top"), product_path(id: product.id) %>
      <div class="card-body" style="text-align: center;">
        <h5> <%= product.name %> </h5>
        <p><%=link_to 'ADD TO CART',cart_items_path(id: product.id), method: :post, class: "btn btn-info"%></p>
      </div>
    </div>
  </div>
<% end %>