<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group row">
    <%= f.label :password, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %><i>(leave blank if you don't want to change it)</i><br />
    </div>
    <% if @minimum_password_length %><br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, "Password Confirmation", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Change my password" , class: "btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
