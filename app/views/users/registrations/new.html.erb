<%= form_for(resource, as: resource_name, url: registration_path(resource_name), method: :post) do |f| %>
  <div class="error_messages">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  <div class="container text-center">
    <h2>Sign Up</h2>
    <div class="form-group row">
      <%= f.label :first_name, "First Name ", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :last_name, "Last Name ", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, "Email", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password, "Password ", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.password_field :password, class: "form-control" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password_confirmation, "Password Confirmation", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <div class="submit-sign-button">
      <p><%= f.submit 'Sign Up'  %></p>
      <p>Already have an account? <%= link_to  'Sign in', new_user_session_path %></p>
      <p>Forgot your password? <%= link_to  'Reset Password', new_user_password_path %></p>
    </div>
  </div>
<% end %>
